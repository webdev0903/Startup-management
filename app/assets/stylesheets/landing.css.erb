/* Second Line */
.secondLine {
width:100%;
/*height:423px;*/
margin-top: -75px;
}
	.secondLineInside {
	background: #ffffff;
	padding: 20px 0;
	margin-right:auto;
	}
		.secondLineInside h4 {
			color: #000000;
			font-size: 32px;
			text-align: center;
		}
		.secondLineInside h5 {
			color: #a8a8a8;
			font-size: 24px;
			text-align: center;
			margin-bottom: 25px;
		}
		.secondLineInsideButtons a {
			float: left;
			display: block;
			width: 100%;
			margin: 0 0 15px;
			padding: 15px 10px;
			-webkit-border-radius: 7px;
			-moz-border-radius: 7px;
			border-radius: 7px;
			text-align: center;
			color: #ffffff;
		}
		.secondLineInsideButtons .btn-light-blue {
			background: #57d5f0;
		}
		.secondLineInsideButtons .btn-medium-blue {
			background: #3bbad4;
		}
		.secondLineInsideButtons .btn-dark-blue {
			background: #2aaac4;
		}

/* Third Line */
