}

/* MEDIA QUERY FOR SMALLER DEVICE SCREEN RESOLUTION */
@media (max-width: 767px) {
	.secondLineInsideButtons a {
		font-size: 10px;
	}
}

@media (max-width: 599px) {
	.secondLine {
		height: auto;
	}
	.secondLineInside {
		padding: 10px 0;
		margin-top: 0;
	}
}

@media (max-width: 320px){
	body {
		font-size: 12px;
	}
	.firstLineDescription, 
	.firstLineLogin, 
	.firstLineInsideSocial,
	.thirdLineTitle h5 {
		font-size: 16px;
	}
	.thirdLineTitle {
		padding-bottom: 5px;
	}
		.thirdLineTitle h4 {
			font-size: 20px;
		}
		.userText {
			font-size: 14px;
		}
}

