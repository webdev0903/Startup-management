		}
			.userTab {
			float:left;
			padding-right:10px;
			padding-bottom:12px;
			}
				.userPhoto {
				float:left; 
				padding-right:8px;
				width: 48px;
				overflow: hidden;
				}
				.userText {
				padding-top:5px;
				float:left;
				width:130px;
				font-size:17px;
				line-height:18px;
				}
					.userText {
					color:#095b6f;
					}

.bottomLine-main {
width:100%;
background:#2aaac4;
}
	.bottomLineInside {
	}
