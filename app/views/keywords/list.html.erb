<% content_for :title do %>
	Keywords
<% end %>
<h1 class="pageContentTitle">Keywords</h1>
<div class="defaultLayoutLeft" style="margin-top:20px; width:930px;">
	<div style="display:table; width:900px; margin-left:30px; font-size:15px;">
		
		<% @keywords.each do |k| %>
			<div style="width:225px; height:30px; float:left">
				<a href="<%= url_for users_path(:keyword => k.slug) %>">
					<span style="color:rgb(110,110,110)">
						<%= k.title %> 
					</span>
					<span style="color:rgb(200,200,200)">
						<%= k.users_count.to_s %>
					</span>
				</a>
			</div>
		<% end %>
	</div>
</div>