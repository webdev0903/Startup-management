<div class="thirdLine">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-8 col-xs-offset-2 thirdLineInside">
      <div class="row thirdLineTitle">
        <div class="col-md-12">
          <h4>Startup Founders</h4>
        </div>
      </div>
      <div class="row thirdLineTitle">
        <div class="col-md-12">
          <h5>Join thousands of other startup founders, helping one another to achieve success.</h5>
        </div>
      </div>
      <div class="row thirdLineUsers">
        <% @users.each do |u| %>
          <%= link_to u.url do %>
            <div class="col-md-3 col-sm-4 col-xs-6">
              <div class="userTab">
                <div class="userPhoto">
                  <%= image_tag(u._photo(:thumb), :style=>'width:45px; border-radius:30px;') %>
                </div>
                <div class="userText">
                  <%= truncate(u.title, :length=>14, :separator=>' ', :omission => ' ') %>
                  <br/>
                  <span style="border-radius:3px; font-size:15px; color:rgb(190,190,190)">
                    <%#= u.profile.current_position if u.profile.summary.present? %>
                    <%= truncate(u.profile.summary, :length=>14, :separator=>' ', :omission => ' ') if u.profile.summary.present? %>
                  </span>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
        <div style="clear:both"></div>
      </div>
    </div> <!-- .thirdLineInside -->
  </div>
</div> <!-- .thirdLine -->
