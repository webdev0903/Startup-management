<% content_for :title do %>
	<% @user.title %>
<% end %>
<div class="userProfile">
	<div class="userProfileInside">
		<%= render 'users/partials/profile_left', :user => @user, :friendship => @friendship, :friend => @friend, :friend_request_sent => @friend_request_sent,
		:friend_request_received => @friend_request_received, :following => @following %>
		<div class="right">
			<h1 class="title">Friends</h1>
			<div class="defaultLayoutLeft gray" style="margin-left:0px;">
				<div style="margin-left:20px; margin-top:10px;">
					<%= render :partial => 'users/partials/medium_tab', :collection => @friends, :as => :user %>
				</div>
			</div>
			<div style="float:left">
				<%= paginate @friends, :previous_label => 'Previous', :next_label => 'Next', :inner_window => 2, :outer_window => 0 %>
			</div>
		</div>
	</div>
</div>

