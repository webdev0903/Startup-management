<%
meta :title => "Sign Up",
     :description => "Sign up for StarterPad. You can either use the old-school email method, or sign up with your Facebook or Twitter account.",
     :keywords => "sign up, signup, starterpad"
%>

<%= content_for :title do %>
	Sign Up
<% end %>

<div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-12">
	<div class="row">
        <div class="col-md-6 col-sm-12 text-center" style="margin-bottom: 10px;">
			<a href="<%= url_for '/auth/twitter' %>" class="btn btn-info">
				<i class="fa fa-twitter fa-2x" style="vertical-align:middle;"></i>&nbsp; Sign up with Twitter
			</a>
		</div>
		<div class="col-md-6 col-sm-12 text-center" style="margin-bottom: 10px;">
			<a href="<%= url_for '/auth/facebook' %>" class="btn btn-primary">
				<i class="fa fa-facebook fa-2x" style="vertical-align:middle;"></i>&nbsp; Sign up with Facebook
			</a>
		</div>	
		<div style="clear:both"></div>
	</div>
	<div style="clear:both; padding:20px 0px 6px 10px; font-weight:bolder; font-size:18px;">
		Or Sign Up without a Social Network
	</div>
	<div class="infoBlok login-form">
		<div class="infoBlokInside">
			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  			<%= devise_error_messages! %>

			<div class="col-md-12">
				<%= f.text_field :title, {:placeholder=>'Full Name or Username', :autofocus => true, :required => true } %>
			</div>

			<div class="col-md-12">
				<%= f.email_field :email, {:placeholder=>'Email', :required => true } %>
			</div>

			<div class="col-md-12">
				<%= f.password_field :password_confirmation, {:placeholder=>'Password (at least 8 characters)', :required => true } %>
			</div>

			<div class="col-md-12">
				<%= f.password_field :password, {:placeholder=>'Repeat Password', :required => true } %>
			</div>

			<div class="col-md-12">	
				<div>
					<%= resource.humanizer_question %>
				</div>
				<div>	
					<div class="input text">
						<%= f.text_field :humanizer_answer, :id => "ContactCaptcha", :required => true %>
            <%= f.hidden_field :humanizer_question_id %>
					</div>	
				</div>
				<div style="clear:both"></div>
			</div>

			<div class="col-md-12 paramTab last">
				By clicking Sign Up, you agree to our 
				<%= link_to 'Terms and Conditions.', '/terms', {:target=>'_blank'} %>
			</div>

			<div class="col-md-3 col-sm-4 col-xs-12">
				<%= f.submit "Sign up", {:class=>'btn btn-primary', :style=>'margin-top:10px;'} %>
			</div>
			<div style="clear:both"></div>
		</div>
	</div>
	
	<div class="col-md-12">
		Already have an account? 
		<%= link_to 'Login here', '/users/sign_in', {:style=>'font-weight:bolder;'} %>
	</div>
</div>
<% end %>