<%
meta :title => "Log In",
     :description => "Log in to your StarterPad account. You can either use the old-school email method, or signin with your Facebook or Twitter account.",
     :keywords => "login, log in, signin, starterpad"
%>

<%= content_for :title do %>
	Log In
<% end %>

<div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-12">
    <div class="row">
		<div class="col-md-6 col-sm-12 text-center" style="margin-bottom: 10px;">
			<a href="<%= url_for '/auth/twitter' %>" class="btn btn-info">
				<i class="fa fa-twitter fa-2x" style="vertical-align:middle;"></i>&nbsp; Login with Twitter
			</a>
		</div>
		<div class="col-md-6 col-sm-12 text-center" style="margin-bottom: 10px;">
			<a href="<%= url_for '/auth/facebook' %>" class="btn btn-primary">
				<i class="fa fa-facebook fa-2x" style="vertical-align:middle;"></i>&nbsp; Login with Facebook
			</a>
		</div>
		<div style="clear:both"></div>
	</div>
    <div style="clear:both; padding:20px 0px 6px 10px; font-weight:bolder; font-size:18px;">
		Or Log In using your Email and Password
	</div>
	<div class="infoBlok login-form">
		<div class="row infoBlokInside">
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
				<%= devise_error_messages! %>
				<div class="col-md-12">
					<%= f.email_field :email, {:autofocus => true, :placeholder=>'Email', :required => true } %>
				</div>
				<div class="col-md-12">
					<%= f.password_field :password, {:placeholder=>'Password', :required => true } %>
				</div>

				<div>
					<div class="col-md-12"> 
						<span class="remember-check"><%= f.check_box :remember_me, {:checked => true} %></span>
						<span class="remember-text">Remember me</span>
					</div>
					<div style="clear:both"></div>
					<div class="col-md-3 col-sm-4 col-xs-12">
						<%= f.submit "Login", {:class=>'btnMiddle btn-primary'} %>
					</div>
					<div class="col-md-9 col-sm-8 col-xs-12">
						<%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
					</div>
				</div>
			<% end %>
			<div style="clear:both"></div>
		</div>
	</div>	
	<div>
		Need an account? <%= link_to "Sign Up here", new_registration_path(resource_name), {:style=>'font-weight:bolder;'} %>
	</div>
</div>
